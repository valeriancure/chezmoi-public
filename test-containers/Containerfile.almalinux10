FROM almalinux:10

# Install basic dependencies
RUN dnf install -y \
    gcc \
    gcc-c++ \
    make \
    curl \
    file \
    git \
    procps-ng \
    sudo \
    && dnf clean all

# Create test user with sudo
RUN useradd -m -s /bin/bash testuser && \
    echo "testuser ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

USER testuser
WORKDIR /home/testuser

# Copy dotfiles directly to chezmoi source directory
RUN mkdir -p /home/testuser/.local/share
COPY --chown=testuser:testuser . /home/testuser/.local/share/chezmoi/

# Install chezmoi
RUN sh -c "$(curl -fsLS get.chezmoi.io)" -- -b /home/testuser/.local/bin

ENV PATH="/home/testuser/.local/bin:${PATH}"

CMD ["/bin/bash"]
